%define {
	hash-comment {
		%pattern {
			start = '#'
			end = '$'
			style = "comment"
		}
	}

	# Generic C-style strings

	# Double Quoted String, With C-style Escape
	dqs-wce {
		%pattern {
			start = '"'
			end = '"|(?:\G|[^\\])\K$'
			style = "string"
		}
	}

	# Double Quoted String, With C-style Escape
	sqs-wce {
		%pattern {
			start = "'"
			end = "'|(?:\G|[^\\])\K$"
			style = "string"
		}
	}
}
