%define {
	c-integer {
		%highlight {
			regex = '(?<![^-+\W])(?:0[xX][0-9a-fA-F]+|[-+]?\d+)[uU]?[lL]?\b'
			style = "number"
		}
	}
	c-float {
		%highlight {
			regex = '(?<![^-+\W])(?:0[xX][0-9a-fA-F]+[pP][-+]?\d+[lLfF]?|[-+]?(?:\d*\.)?\d+(?:[eE][-+]?\d+)?[lLfF]?)'
			style = "number"
		}
	}

	java-integer {
		%highlight {
			regex = '(?<![^-+\W])(?:0[xX][0-9a-fA-F]+|[-+]?\d+)[lL]?\b'
			style = "number"
		}
	}
	java-float {
		%highlight {
			regex = '(?<![^-+\W])(?:0[xX][0-9a-fA-F]+[pP][-+]?\d+[dDfF]?|[-+]?(?:\d*\.)?\d+(?:[eE][-+]?\d+)?[dDfF]?)'
			style = "number"
		}
	}

	c-number {
		%highlight { use = "c-float" }
		%highlight { use = "c-integer" }
	}

	java-number {
		%highlight { use = "java-float" }
		%highlight { use = "java-integer" }
	}
}
