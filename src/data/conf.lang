format = 1

%include = "def/generic.lang"

# The #-style comments are frequently used
%pattern { use = "hash-comment" }

# Ini style comments
%pattern {
	start = "^\s*;"
	end = "$"
	style = "comment"
}

# Ini style headings
%pattern {
	regex = "^\s*\[[^]]+\]"
	style = "keyword"
}

# Generic C-style strings
%pattern { use = "dqs-w/ce" }
%pattern { use = "sqs-w/ce" }
