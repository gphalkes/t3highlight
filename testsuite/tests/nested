format = 1

%pattern {
	start = "\/\*"
	end = "\*\/"
	nested = yes
	style = "comment"
	delim-style = "comment-keyword"
}
%pattern {
	start = "{"
	%pattern {
		start = "\("
		%pattern {
			regex = "\bbar\b"
			style = "string"
		}
		style = "number"
		end = "\)"
		nested = yes
	}
	%pattern {
		regex = "\bfoo\b"
		style = "keyword"
	}
	end = "}"
	style = "misc"
	nested = yes
}

#TEST
/* comment style */
regular style

/* comment /* comment */ comment */ regular
/* comment /* comment */ comment */ regular
/*/* comment /* comment */ comment */*/ regular

{ foo { foo ( bar ( foo bar ) bar ) bar } foo } regular
/* comment /* comment */ comment */ regular
==
