<keyword>struct</keyword> t3_highlight_match_t {
	<keyword>const</keyword> t3_highlight_t *highlight;
	VECTOR(state_mapping_t, mapping);
	size_t start,
		match_start,
		end;
	<keyword>int</keyword> state,
		begin_attribute,
		match_attribute;
